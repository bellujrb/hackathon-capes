{
  "manifest_version": 3,
  "name": "Capes Extension",
  "version": "1.0",
  "description": "Extensão para ajudar no envio e identificação de citações.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
